
---
interface Props {
  content: {
    title: string;
    description1: string;
    description2: string;
    description3: string;
    cta: string;
    imageAlt: string;
  };
}

const { content } = Astro.props;
---

<section id="nosotros" class="py-16 md:py-24 bg-white">
  <div class="container px-4 md:px-6">
    <div class="flex flex-col md:flex-row items-center gap-12">
      <div 
        data-aos="fade-right"
        class="md:w-1/2"
      >
        <h2 class="text-3xl md:text-4xl font-bold mb-6 text-earth-900">{content.title}</h2>
        <p class="text-lg text-earth-800 leading-relaxed mb-6">
          {content.description1}
        </p>
        <p class="text-lg text-earth-800 leading-relaxed mb-6">
          {content.description2}
        </p>
        <p class="text-lg text-earth-800 leading-relaxed mb-6">
          <strong>{content.description3}</strong>
        </p>
        
        <div class="flex justify-center">
          <a 
            href="https://ruralhackers.com" 
            target="_blank"
            class="inline-block bg-earth-800 hover:bg-earth-900 text-white px-6 py-3 rounded-md transition-colors duration-200 font-medium text-center"
          >
            {content.cta}
          </a>
        </div>
      </div>
      
      <div 
        data-aos="fade-left"
        class="md:w-1/2"
      >
        <div class="rounded-xl overflow-hidden shadow-lg">
          <img 
            src="/mural.png" 
            alt={content.imageAlt} 
            class="w-full h-auto"
          />
        </div>
      </div>
    </div>
  </div>
</section>